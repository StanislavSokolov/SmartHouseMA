<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/untitled"
            android:id="@+id/imageView" android:scaleType="centerCrop" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp">
            <TextView

                    android:text="Settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/selectedMenuItem"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:autoText="false"
                    android:textColor="@android:color/primary_text_dark_nodisable"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView4"/>
            <Switch
                    android:text="Light bedroom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/switch1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textAllCaps="false"
                    android:textColor="@android:color/primary_text_dark_nodisable"
                    android:background="#27E0F7FA" android:textIsSelectable="true"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView3"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:background="#26E0F7FA">
                <TextView
                        android:text="Выбор режима"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView2" app:autoSizeTextType="none"
                        android:ellipsize="none" android:lineSpacingExtra="8sp"
                        android:verticalScrollbarPosition="defaultPosition"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:freezesText="true" android:textAllCaps="false"
                        android:textColor="@android:color/primary_text_dark_nodisable"
                        android:textColorHighlight="#00FFFFFF" android:textColorLink="#00FFFFFF"
                />
                <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/spinner"/>
            </LinearLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView8"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:background="#26E0F7FA">
                <TextView
                        android:text="Выбор подрежима"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView5"
                        android:textColor="@android:color/primary_text_dark_nodisable"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:background="#26E0F7FA"/>
                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/spinner2"
                            android:visibility="visible"/>
                    <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/spinner3"/>
                </FrameLayout>
            </LinearLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView9"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:background="#26E0F7FA">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="Яркость"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content" android:id="@+id/textView6"
                            android:textColor="@android:color/primary_text_dark_nodisable" android:textSize="18sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView11" android:gravity="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@android:color/primary_text_dark_nodisable"/>
                </LinearLayout>
                <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/seekBar" android:progress="50"/>
            </LinearLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView10"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:background="#26E0F7FA">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:text="Скорость"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content" android:id="@+id/textView7"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@android:color/primary_text_dark_nodisable"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView12"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@android:color/primary_text_dark_nodisable" android:gravity="center"/>
                </LinearLayout>
                <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/seekBar2" android:visibility="visible"
                        android:max="100" android:progress="50" app:layout_constraintTop_toBottomOf="@+id/textView11"/>
            </LinearLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView14"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView15"/>
            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="147dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="vertical" android:id="@+id/linearLayoutScanResults">
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>